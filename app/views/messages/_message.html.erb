<li class="message-box">
  <%= link_to user_path(message.user_id), class: "message-user" do %>
    <figure>
      <div>
        <i class="fas fa-user-circle"></i>
      </div>
      <figcaption class="figcaption-bold"><%= message.user.nickname %></figcaption>
    </figure>
    <% if message.user_id == message.item.user_id %>
    <div class="message-is-seller">出品者</div>
    <% end %>
  <% end %>
  <div class="message-body">
    <div class="message-body-text">
      <%= message.comment %>
    </div>
    <div class="message-icons message-box">
      <time class="message-icon-left">
        <i class="far fa-clock"></i>
        <span><%= time_ago_in_words(message.created_at) %>前</span>
      </time>
      <div class="message-icon-right">
        <form action="#">
          <button type="submit">
            <i class="fas fa-flag"></i>
          </button>
          <input type="hidden">
        </form>
      </div>
    </div>
  </div>
</li>