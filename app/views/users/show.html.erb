<%= render "shared/header" %>
<h1 class="nickname"><%= @user.nickname %></h1>
<p class="item-index"><%= "#{@user.nickname}の出品商品" %></p>
<% @items.each do |item| %>
  <div class="item-show">
    <div class="item-box">
      <%= link_to item_path(item), class: "item-name"  do %>
        <h2 class="name">
          <%= item.name %>
        </h2>
        <div class='item-img-content'>
          <%= image_tag item.image ,class:"item-box-img" %>
          <% if item.order.present? %>
            <div class='sold-out'>
              <span>Sold Out!!</span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>