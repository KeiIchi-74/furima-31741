<% if user_signed_in? %>
  <% if current_user.id != item.user_id %>
    <% if item.favorited_by?(current_user) %>
      <%=link_to item_favorites_path(item.id), method: :delete, remote: true do %>
        <i class="fa fa-star" id="star-on" aria-hidden="true"></i>
        <span>お気に入り解除：</span>
        <%= item.favorites.count %>
      <% end %>
    <% else %>
      <%=link_to item_favorites_path(item.id), method: :post, remote: true  do %>
        <i class="fa fa-star" id="star-off" aria-hidden="true"></i>
        <span>お気に入り登録：</span>
        <%= item.favorites.count %>
      <% end %>
    <% end %>
  <% else %>
    <i class="fa fa-star" id="star-on" aria-hidden="true"></i>
    <span>お気に入り数：</span>
    <%= item.favorites.count %>
  <% end %>
<% else %>
  <i class="fa fa-star" id="star-off" aria-hidden="true"></i>
  <span>お気に入り登録：</span>
  <%= item.favorites.count %>
<% end %>