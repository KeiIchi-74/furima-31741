<%= render "shared/second-header"%>

<main class="single-main">
  <section class="l-single-container  login--container">
    <p class="l-single-head registration " id="login--p">アカウントをお持ちでない方はこちら<%= link_to "新規会員登録", new_user_registration_path, class: "login-to-registration" %></p>
    <div class="l-single-inner registration-form">
      <div class="l-single-content">
        <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn-default-sns btn-sns btn-sns-google" do %>
        <img src="https://img.icons8.com/color/96/000000/google-logo.png" class="google-img">
        Googleで登録する
        <% end %>
        <%= link_to user_facebook_omniauth_authorize_path, method: :post, class: "btn-default-sns btn-sns btn-sns-facebook" do %>
        <i class="fab fa-facebook-square"></i>
        Facebookで登録する
        <% end %>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class='login-flash-message'>
            <%= flash[:notice] %>
            <%= flash[:alert] %>
          </div>
          <%= f.email_field :email, class:"input-default login--btn", id:"email", placeholder:"メールアドレス", autofocus: true %>
          <%= f.password_field :password, class:"input-default login--btn", id:"password", placeholder:"パスワード" %>
          <%= f.submit "ログイン" ,class:"login-red-btn login--btn" %>
        <% end %>
      </div>
    </div>
  </section>
</main>


<%= render "shared/second-footer"%>