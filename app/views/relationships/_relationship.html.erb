<% if user_signed_in? %>
  <% if current_user.id != user.id %>
    <% if user.followed_by?(current_user) %>
      <%= link_to user_relationships_path(user.id), method: :delete, remote: true do %>
        <span>フォロー</span>
        <i class="fas fa-feather-alt" id="feather-on"></i>
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(user.id), method: :post, remote: true do %>
        <span>フォローする</span>
        <i class="fas fa-feather-alt" id="feather-off"></i>
      <% end %>
    <% end %>
  <% end %>
<% end %>
