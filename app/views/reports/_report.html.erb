<% if user_signed_in? %>
  <% if current_user.id != item.user_id && item.order.present? == false %>
    <% if item.reported_by?(current_user) %>
      <%= link_to item_reports_path(item.id), method: :delete, remote: true do %>
        <i class="fas fa-flag" id="flag-on"></i>
        <span class="report">不適切な商品を報告しました</span>
      <% end %>
    <% else %>
      <%=link_to item_reports_path(item.id), method: :post, remote: true  do %>
        <i class="fas fa-flag" id="flag-off"></i>
        <span class="report">不適切な商品を報告する</span>
      <% end %>
    <% end %>
  <% else %>
    <i class="fas fa-flag" id="flag-off"></i>
    <span class="report">不適切な商品を報告する</span>
  <% end %>
<% else %>
  <i class="fas fa-flag" id="flag-off"></i>
  <span class="report">不適切な商品を報告する</span>
<% end %>